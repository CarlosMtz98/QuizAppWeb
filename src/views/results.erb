<div class="card text-center" style="min-height: 60vh; margin-top: 60px">
    <div class="card-body align-content-center" style="display: flex; flex-direction: column">
      <h2><%= @quizModel.username %></h2>
      <h3>Your score: <%= @quizModel.grade %></h3>
      <div class="container">
        <table class="table table-bordered" style="margin-top: 30px">
          <thead>
          <tr>
            <th scope="col-1">#</th>
            <th scope="col-10">Question</th>
            <th scope="col-1">Result</th>
          </tr>
          </thead>
          <tbody>
            <% @quizModel.answers.each_with_index do |ans, index| %>
              <tr>
                <th scope="row"><%= index %></th>
                <td style="text-align: left">
                  <div class="container">
                    <p><%= @quizModel.questions.find { |q| q.id == ans.question_id }.value  %></p>
                    <% if !ans.is_correct %>

                    <strong>Correct answer:</strong>
                    <p><%= ans.correct_answer %></p>
                  <% end %>
                  </div>
                </td>
                <td><%= ans.is_correct ? '✅' : '❌' %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="card-footer text-muted" style="min-height: 55px">
      <div class="row align-items-center" style="min-height: 38px">
        <div class="col" style="text-align: left; padding-left: 30px;">
          <div id="submitButtonDiv">
            <button type="button" class="btn btn-primary">Top Rank</button>
          </div>
        </div>
        <div class="col"></div>
        <div class="col" style="text-align: right; padding-right: 30px;">
          <div id="submitButtonDiv">
            <button type="button" class="btn btn-primary">Restart</button>
          </div>
        </div>
      </div>
    </div>
  </div>